<h1>Listing authors</h1>
 
<table id="authorsTable">
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th colspan="3">Actions</th>
  </tr>
 
  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Delete', author_path(author),
              data: { method: "delete", confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'New', new_author_path %></p>